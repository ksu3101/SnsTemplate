<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:orientation="vertical">

   <android.support.v4.view.ViewPager
      android:id="@+id/showcase_vp"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>

   <!-- Left button -->
   <ImageButton
      android:id="@+id/showcase_ibtn_left"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:background="@null"
      android:paddingBottom="12dp"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      android:paddingTop="12dp"
      android:src="@drawable/ic_right_arrow"
      android:visibility="gone"/>

   <!-- Right button -->
   <ImageButton
      android:id="@+id/showcase_ibtn_right"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentRight="true"
      android:background="@null"
      android:paddingBottom="12dp"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      android:paddingTop="12dp"
      android:rotation="180"
      android:src="@drawable/ic_right_arrow"/>

   <!-- Skip button -->
   <TextView
      android:id="@+id/showcase_tv_skip"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:padding="14dp"
      android:text="@string/c_skip"
      android:textColor="@color/white"
      android:textSize="@dimen/c_textSize"/>

   <kr.swkang.snstemplate.utils.widgets.viewpagers.pagerindicator.ViewPagerIndicator
      android:id="@+id/showcase_vp_indicator"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="100dp"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/dialog_def_width"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@drawable/bg_common_dialog"
              android:orientation="vertical"
              android:paddingTop="25dp">

   <kr.swkang.swimageview.SwImageView
      android:id="@+id/swdialog_iv_top"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:visibility="gone"/>

   <TextView
      android:id="@+id/swdialog_tv_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:textColor="@color/flat_midnight"
      android:textSize="18sp"
      android:textStyle="bold"/>

   <TextView
      android:id="@+id/swdialog_tv_message"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="40dp"
      android:layout_marginTop="14dp"
      android:gravity="center"
      android:textColor="@color/flat_stone"/>

   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <TextView
         android:id="@+id/swdialog_btn_left"
         style="@style/SwDialogCommonButtons"
         android:visibility="gone"/>

      <TextView
         android:id="@+id/swdialog_btn_right"
         style="@style/SwDialogCommonButtons"
         android:visibility="gone"/>

   </LinearLayout>

</LinearLayout>